<div class="container">
  <div class="row">
    <div class="offset-lg-2 col-lg-8">
      <%= render partial: 'leader' %>
      <%= render partial: 'rsvp_nav', locals: { active: 1 } %>

      <h2><%= t :form_about_you %></h2>

      <%= form_with(model: @guest, method: :patch, local: true, id: 'guest-edit-form') do |form| %>
      <div class="row">
        <div class="col-md-12">
          <%= errors_for(@guest) %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-3">
          <%= form.label :email, class: 'col-form-label' %>
          <span class="wedding-required">*</span>
        </div>
        <div class="col-md-9">
          <%= form.email_field :email, id: 'guest_email', class: 'form-control', required: true %>
        </div>
      </div>

      <%= render partial: 'name', locals: { form: form, id_stem: 'guest' } %>

      <div class="form-group row">
        <div class="offset-md-3 col-md-9">
          <p><strong><%= t :guest_question_attending %></strong></p>
          <div class="form-check form-check-inline">
            <%= form.radio_button :attending, 'true', checked: true, id: 'guest_attending_true', class: 'form-check-input' %>
            <%= form.label :attending, t('form_yes'), value: 'true', class: 'form-check-label' %>
          </div>
          <div class="form-check form-check-inline">
            <%= form.radio_button :attending, 'false', id: 'guest_attending_false', class: 'form-check-input' %>
            <%= form.label :attending, t('form_no'), value: 'false', class: 'form-check-label' %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="offset-md-3 col-md-9">
          <p><strong><%= t :guest_question_transport %></strong></p>
          <div class="form-check form-check-inline">
            <%= form.radio_button :transport, 'true', checked: true, id: 'guest_transport_true', class: 'form-check-input' %>
            <%= form.label :transport, t('form_yes'), value: 'true', class: 'form-check-label' %>
          </div>
          <div class="form-check form-check-inline">
            <%= form.radio_button :transport, 'false', id: 'guest_transport_false', class: 'form-check-input' %>
            <%= form.label :transport, t('form_no'), value: 'false', class: 'form-check-label' %>
          </div>
        </div>
      </div>

      <div class="guest-attending-only">
      <%= render partial: 'dietary_preferences', locals: { form: form, id_stem: 'guest' } %>

      <div class="form-group row">
        <div class="col-md-3">
          <%= form.label :songs, t('guest_question_songs'), class: 'col-form-label' %>
        </div>
        <div class="col-md-9">
          <%= form.text_area :songs, id: 'guest_songs', class: 'form-control' %>
          <small class="form-text text-muted"><%= t :guest_question_songs_footer %></small>
        </div>
      </div>
      </div>

      <div class="row guests-buttons">
        <div class="col-md-3">
          <span class="wedding-required">* <%= t :form_required %></span>
        </div>
        <div class="col-md-6 text-center">
          <%= form.submit t('form_continue'), class: 'btn btn-primary', data: { disable_with: t('form_sending') } %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
